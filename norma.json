{
  "name": "junction-framework",
  "tasks": {
    "bower": {
      "packages": {
        "normalize.sass": "~2.0.0"
      }
    },
    "sass": {
      "src": "lib/**/*",
      "dest": "out/",
      "comb": true,
      "lint": true
    },
    "copy": {
      "src": "out/framework",
      "dest": "./",
      "order": "post",
      "ext": [
        "css"
      ]
    },
    "styleguide-copy": {
      "@extend": "copy",
      "src": "out/framework",
      "dest": "styleguide/client/stylesheets/"
    },
    "dss-meteor": {
      "src": "lib/**/*",
      "dest": "http://localhost:3000/api/v1/blocks"
    },
    "meteor": {
      "dev": true,
      "src": "styleguide",
      "settings": "styleguide/settings.json",
      "packages": [
        "meteor-platform",
        "iron:router",
        "iron:location",
        "meteorhacks:fast-render",
        "meteorhacks:subs-manager",
        "cfs:http-methods",
        "http",
        "coffeescript"
      ],
      "platforms": [
        "server",
        "browser"
      ]
    }
  }
}
