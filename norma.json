{
  "name": "junction-framework",
  "tasks":{
    "bower": {
      "packages": {
        "normalize.sass": "~2.0.0"
      }
    },
    "sass": {
      "src": "lib/**/*",
      "dest": "out/",
      "comb": false,
      "lint": false
    },
    "copy": {
      "src": "out/framework",
      "dest": "./",
      "order": "post",
      "ext": ["css"]
    },
    "dss": {
      "src": "lib/**/*",
      "dest": "styleguide/"
    }
  }
}
